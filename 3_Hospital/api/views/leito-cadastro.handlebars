<h3>{{wng.wng_desc}} - Novo Leito</h3>
<hr>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.js"></script>
<form action="/hospital/{{wng.wng_hsp_id}}/ala/{{wng.wng_id}}/leito" method="post">
    <div class="form-group">
        <label for="inputName">Nome</label>
        <input type="text" class="form-control" name="inputName" placeholder="Nome da Leito" maxlength="100">
    </div>
     <div class="form-group">
        <label for="inputCpf">CPF</label>
        <input type="text" class="form-control cpf" name="inputCpf" placeholder="CPF" maxlength="100">
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a class="btn btn-primary" href="/hospital/{{wng.wng_hsp_id}}/ala/{{wng.wng_id}}/leito" role="button">Voltar</a>
</form>
<script>
     $('.cpf').mask('999.999.999-99', { reverse: true });
</script>